@model List<Category>

@{
    ViewBag.Title = "ListCategories";
}

<h2>Kategori listesi. Yeni bir kategori eklemek için @Html.ActionLink("tıklayınız.", "AddCategory")</h2>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kategori ID</th>
                <th>Kategori İsmi</th>
                <th>Açıklama</th>
                <th colspan="2" style="text-align:center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("Güncelle","UpdateCategory","Category", new {id = item.CategoryID}, new {@class="btn btn-warning"})</td>
                    <td>@Html.ActionLink("Sil","DeleteCategory","Category", new {id = item.CategoryID}, new {@class="btn btn-danger"})</td>
                </tr>
            }
        </tbody>
    </table>
</div>

